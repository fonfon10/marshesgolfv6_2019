<p id="notice"><%= notice %></p>

<h1>Open Closes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @open_closes.each do |open_close| %>
      <tr>
        <td><%= open_close.name %></td>
        <td><%= link_to 'Show', open_close %></td>
        <td><%= link_to 'Edit', edit_open_close_path(open_close) %></td>
        <td><%= link_to 'Destroy', open_close, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

